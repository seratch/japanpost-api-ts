    "prepublishOnly": "npm run build:clean && npm test",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.15.25",
    "@vitest/coverage-v8": "^3.1.4",
    "semantic-release": "^23.0.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "debug": "^4.4.1"
  }
